---
import IconLink from "../components/IconLink.astro";
import EnvelopeIcon from "../icons/EnvelopeIcon.astro";
import GithubIcon from "../icons/GitHubIcon.astro";
import LinkedInIcon from "../icons/LinkedInIcon.astro";
---

<header
  class="absolute top-0 p-6 flex gap-4 text-[#757575] animate-fade-in opacity-0 animation-delay-2000"
>
  <IconLink
    title="Github Link"
    href="https://github.com/Krish120003"
    class="hover:text-zinc-100"
  >
    <GithubIcon />
  </IconLink>
  <IconLink
    title="LinkedIn Link"
    href="https://www.linkedin.com/in/krish-krish/"
    class="hover:text-zinc-100"
  >
    <LinkedInIcon />
  </IconLink>
  <IconLink
    title="Email hello@krishkrish.com"
    href="mailto:hello@krishkrish.com"
    class="hover:text-zinc-100"
  >
    <EnvelopeIcon />
  </IconLink>
</header>
